<div class="table-responsive">
<h2>タグ一覧</h2>
    <% @interests.each do |interest| %>
    <div class="row">
      <div class="col-md-2" >
        <%= link_to_if(interest.content_url.present? , interest.content, "#{interest.content_url}", class: "btn btn-success btn-lg") %>
      </div>
      <div class="col-md-3" >
        <%= link_to "タグの編集" , edit_interest_path(interest), class: "btn btn-primary btn-lg" %>
        <%= link_to 'タグの削除', interest, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-lg" %>
      </div>
    </div>
    <% end %>
</div>
