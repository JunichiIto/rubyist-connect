<div class="container">
<div class="col-md-10" >
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group form-group-lg">
    <%= f.label "自己紹介文" %>
    <%= f.text_area :introduction , :rows => 10, :class => "form-control" %>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label "Twitter ユーザ名" %>
    <div class="input-group">
      <span class="input-group-addon">@</span>
      <%= f.text_field :twitter_name , :class => "form-control" %>
    </div>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label "Facebook ユーザ名" %>
    <div class="input-group">
      <span class="input-group-addon">https://www.facebook.com/</span>
      <%= f.text_field :facebook_name , :class => "form-control" %>
    </div>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label "名前" %>
    <%= f.text_field :name , :class => "form-control" %>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label "場所" %>
    <%= f.text_field :location , :class => "form-control" %>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label "ブログ URL" %>
    <%= f.text_field :blog , :class => "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit(:class => "btn btn-success btn-lg", :value => "更新" )%>
  </div>
  </div>
<% end %>
  <div class="col-md-2" >
    <h2>タグの作成</h2>
    <%= link_to 'タグ作成', new_interest_path, class: "btn btn-primary btn-lg" %>
    <h2>退会する</h2>
    <%= link_to '退会', @user, method: :delete, data: { confirm: '退会してもよろしいですか？' }, class: "btn btn-danger btn-lg" %>
  </div>
</div>
</div><!-- /.container -->
